@page
@model TerraAcquire.Web.Pages.Manage.Trippings.CalendarViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar View</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .calendar {
            display: table;
            width: 100%;
            border-collapse: collapse;
        }

        .calendar th, .calendar td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .calendar th {
            background-color: #f0f0f0;
        }

        .calendar .day {
            cursor: pointer;
        }

        .calendar .current-month {
            background-color: #ffecb3;
        }

        .calendar .other-month {
            color: #ccc;
        }

        .calendar .nav-buttons {
            text-align: center;
            margin: 20px 0;
        }

        .calendar .month-nav {
            cursor: pointer;
            padding: 5px 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
        }

        .calendar .month-nav:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

    <div class="calendar">
        <div class="nav-buttons">
            <button class="month-nav" onclick="window.location.href='?month=@Model.PreviousMonth&year=@Model.Year'">
                <i class="fas fa-arrow-left"></i> Previous
            </button>
            <span>@Model.MonthName @Model.Year</span>
            <button class="month-nav" onclick="window.location.href='?month=@Model.NextMonth&year=@Model.Year'">
                Next <i class="fas fa-arrow-right"></i>
            </button>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Sun</th>
                    <th>Mon</th>
                    <th>Tue</th>
                    <th>Wed</th>
                    <th>Thu</th>
                    <th>Fri</th>
                    <th>Sat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var week in Model.CalendarDays)
                {
                    <tr>
                        @foreach (var day in week)
                        {
                            <td class="day @(day.IsInCurrentMonth ? "current-month" : "other-month")">
                                @if (day.DayNumber != 0)
                                {
                                    <span>@day.DayNumber</span>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>