@page
@model TerraAcquire.Web.Pages.Manage.ModelHouses.UpdateModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Item</title>
</head>
<body>

    <h2>Update Item</h2>

    <form method="post">
        <div>
            <label for="itemId">Item ID</label>
            <input type="text" id="itemId" name="ItemId" value="@Model.Item.Id" readonly />
        </div>

        <div>
            <label for="itemName">Name</label>
            <input type="text" id="itemName" name="Item.Name" value="@Model.Item.Name" />
        </div>

        <div>
            <label for="itemDescription">Description</label>
            <input type="text" id="itemDescription" name="Item.Description" value="@Model.Item.Description" />
        </div>

        <div>
            <button type="submit">Update</button>
        </div>
    </form>

</body>
</html>