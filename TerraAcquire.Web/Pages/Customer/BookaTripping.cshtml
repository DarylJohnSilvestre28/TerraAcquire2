@page
@model TerraAcquire.Web.Pages.Customer.BookaTrippingModel
@{
    ViewData["Title"] = "Book a Tripping";
}


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h2>@ViewData["Title"]</h2>

        <form method="post">
            <div class="form-group">
                <label for="Destination">Destination</label>
                <select id="Destination" class="form-control" asp-for="Trip.Destination" asp-items="Model.DestinationList">
                    <option value="">Select a destination</option>
                </select>
                <span asp-validation-for="Trip.Destination" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="DepartureDate">Departure Date</label>
                <input type="date" class="form-control" id="DepartureDate" asp-for="Trip.DepartureDate" />
                <span asp-validation-for="Trip.DepartureDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="NumberOfGuests">Number of Guests</label>
                <input type="number" class="form-control" id="NumberOfGuests" asp-for="Trip.NumberOfGuests" min="1" />
                <span asp-validation-for="Trip.NumberOfGuests" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Book Trip</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
